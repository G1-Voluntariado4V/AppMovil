<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="24dp"
    android:background="@drawable/bg_card_outline"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgActivityIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_circle_light_blue"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/solera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEDIO AMBIENTE"
            android:textColor="#12B76A"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTitleHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Limpieza del RÃ­o Arga"
            android:textColor="#101828"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="#98A2B3" />

            <TextView
                android:id="@+id/tvDateAndSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="15 Oct"
                android:textColor="#667085"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>